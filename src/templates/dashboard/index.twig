{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("trendyminds\\isolate\\assetbundles\\indexcpsection\\IndexCPSectionAsset") %}

{% set title = "Dashboard" %}
{% set pluginCpUrl = url('isolate') %}
{% set sectionGroup = craft.app.sections.editableSections | group('type') %}

{% block actionButton %}
  {% if craft.app.request.getSegment(3) %}
    {% set section = craft.app.sections.getSectionByHandle(craft.app.request.getSegment(3)) %}

    {% if currentUser.can("createEntries:" ~ section.uid) %}
      <a href="{{ url('entries/' ~ section.handle ~ '/new') }}" class="btn submit add icon">New entry</a>
    {% endif %}
  {% endif %}
{% endblock %}

{% block sidebar %}
  <nav>
    <ul>
      {% for type, sections in sectionGroup %}
        {% if type == "single" %}
          <li class="heading"><span>Singles</span></li>
          {% for section in sections %}
            {% for entry in craft.entries.section(section.handle).all() %}
              <li><a href="{{entry.cpEditUrl}}">{{section.name}}</a></li>
            {% endfor %}
          {% endfor %}
        {% endif %}

        {% if type != "single" %}
          <li class="heading"><span>{{type | ucfirst}}s</span></li>
          {% for section in sections %}
            <li>
              <a{% if craft.app.request.getSegment(3) == section.handle %} class="sel"{% endif %} href="{{url('isolate/dashboard/' ~ section.handle)}}">
                {{section.name}}
              </a>
            </li>
          {% endfor %}
        {% endif %}
      {% endfor %}
    </ul>
  </nav>
{% endblock %}

{% block content %}
  {% if craft.app.request.getSegment(3) %}
    {% set section = craft.app.sections.getSectionByHandle(craft.app.request.getSegment(3)) %}
    <table class="data fullwidth collapsible isolate__entries">
      <thead>
        <tr>
          <th>Title</th>
          <th>Post Date</th>
          <th data-icon="world"></th>
        </tr>
      </thead>
      <tbody>

        {% set site = craft.app.sites.getSiteByHandle(craft.app.request.getQueryParam('site')) %}
        {% paginate craft.isolate.getUserEntries(currentUser.id, section.id, 50, false, site.id) as pageInfo, pageEntries %}

        {% for entry in pageEntries %}
          <tr>
            <td>
              <span class="status {{entry.status}}"></span>
              <a href="{{entry.cpEditUrl}}">{{entry.title}}</a>
            </td>
            <td>{{entry.postDate | date("n/j/Y")}}</td>
            <td>
              {% if entry.url %}
                <a href="{{entry.url}}" target="_blank" data-icon="world"></a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

    <br><br>

    {% if pageInfo.totalPages > 1 %}
      <nav class="isolate__pagination">
        {% if pageInfo.prevUrl %}
          <a href="{{pageInfo.prevUrl}}">&larr;</a>
        {% endif %}

        {% if pageInfo.currentPage > 3 %}
          <a href="{{pageInfo.firstUrl}}">1</a>
          <span class="isolate__pagination-ellipsis">&hellip;</span>
        {% endif %}

        {% for page, url in pageInfo.getPrevUrls(2) %}
          <a href="{{url}}">{{page}}</a>
        {% endfor %}

        <span class="isolate__pagination-current">{{pageInfo.currentPage}}</span>

        {% for page, url in pageInfo.getNextUrls(2) %}
          <a href="{{url}}">{{page}}</a>
        {% endfor %}

        {% if pageInfo.currentPage + 2 < pageInfo.totalPages %}
          <span class="isolate__pagination-ellipsis">&hellip;</span>
          <a href="{{pageInfo.lastUrl}}">{{pageInfo.totalPages}}</a>
        {% endif %}

        {% if pageInfo.nextUrl %}
          <a href="{{pageInfo.nextUrl}}">&rarr;</a>
        {% endif %}
      </nav>
    {% endif %}

    {% paginate craft.isolate.getUserEntries(currentUser.id, section.id, 50, true) as draftInfo, draftEntries %}

    {% if draftEntries | length %}
      <h2>Drafts</h2>
      <table class="data fullwidth collapsible isolate__entries">
        <thead>
          <tr>
            <th>Title</th>
            <th>Post Date</th>
            <th data-icon="world"></th>
          </tr>
        </thead>
        <tbody>
          {% for entry in draftEntries %}
            <tr>
              <td>
                <span class="status {{entry.status}}"></span>
                <a href="{{entry.cpEditUrl}}">{{entry.title}}</a>
              </td>
              <td>{{entry.postDate | date("n/j/Y")}}</td>
              <td>
                {% if entry.url %}
                  <a href="{{entry.url}}" target="_blank" data-icon="world"></a>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>

      <br><br>

      {% if draftInfo.totalPages > 1 %}
        <nav class="isolate__pagination">
          {% if draftInfo.prevUrl %}
            <a href="{{draftInfo.prevUrl}}">&larr;</a>
          {% endif %}

          {% if draftInfo.currentPage > 3 %}
            <a href="{{draftInfo.firstUrl}}">1</a>
            <span class="isolate__pagination-ellipsis">&hellip;</span>
          {% endif %}

          {% for page, url in draftInfo.getPrevUrls(2) %}
            <a href="{{url}}">{{page}}</a>
          {% endfor %}

          <span class="isolate__pagination-current">{{draftInfo.currentPage}}</span>

          {% for page, url in draftInfo.getNextUrls(2) %}
            <a href="{{url}}">{{page}}</a>
          {% endfor %}

          {% if draftInfo.currentPage + 2 < draftInfo.totalPages %}
            <span class="isolate__pagination-ellipsis">&hellip;</span>
            <a href="{{draftInfo.lastUrl}}">{{draftInfo.totalPages}}</a>
          {% endif %}

          {% if draftInfo.nextUrl %}
            <a href="{{draftInfo.nextUrl}}">&rarr;</a>
          {% endif %}
        </nav>
      {% endif %}
    {% endif %}
  {% endif %}

  {% if not craft.app.request.getSegment(3) %}
    {% include "isolate/_partials/empty-frame" %}
  {% endif %}
{% endblock %}
